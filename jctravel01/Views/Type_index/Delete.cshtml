@model jctravel01.Models.Type_index

@{
    ViewBag.Title = "刪除型態";
}

<h2>刪除型態</h2>

<div class="alert alert-danger">
    @if (@ViewBag.ShowDetail != null)
    {
        <h3>@ViewBag.ShowDetail</h3>
    }
    else
    {
        <h3>你確定要刪除這筆資料?</h3>
    }
</div>
<div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (@ViewBag.ShowDetail == null)
            {
                <input type="submit" value="確認刪除" class="btn btn-danger" /> @:|
            }
           @Html.ActionLink("回到列表", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
        </div>
    }
</div>
