@model jctravel01.Models.ViewModel.ChangePassWord

@{
    ViewBag.Title = "更改密碼";
}
@section scripts{
    <script src="~/Scripts/toggle-password.js"></script>
    <script src="~/Scripts/CapsLockTip.js"></script>
    <script>
        $.toggleShowPassword({
            field: '#PassWord',
            control: '#ShowPassWord1'
        })
        $.toggleShowPassword({
            field: '#RepeatPass',
            control: '#ShowRepeatPass'
        })
        $("#PassWord").capsLockTip();
        $("#RepeatPass").capsLockTip();
    </script>

}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="col-md-offset-4">
                更改密碼
            </h2>
        </div>
        <div class="panel-footer">
            <div class="form-horizontal col-lg-offset-4">
                <h4 class="">第一次登入時更改密碼才能登入</h4>
                <hr />
                @Html.HiddenFor(model => model.empIndex)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.PassWord, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control" } })
                        <p><label class="checkbox-inline"><input type="checkbox" title="切換顯示模式" id="ShowPassWord1" />顯示密碼</label></p>
                        <p>@Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })</p>
                    </div>

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.RepeatPass, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RepeatPass, new { htmlAttributes = new { @class = "form-control" } })
                        <p><label class="checkbox-inline"><input type="checkbox" title="切換顯示模式" id="ShowRepeatPass" />顯示確認密碼</label></p>
                        <p>@Html.ValidationMessageFor(model => model.RepeatPass, "", new { @class = "text-danger" })</p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="確認" class="btn btn-primary" />
                        @Html.ActionLink("取消", "Index", null, htmlAttributes: new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
        </div>
    </div>



}
